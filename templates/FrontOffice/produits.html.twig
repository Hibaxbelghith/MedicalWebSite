{% extends 'FrontOffice/base.html.twig' %}



{% block body %}

<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white"> Accueil </span>
                    <h1 class="text-capitalize mb-5 text-lg">Accessoires</h1>
                </div>
            </div>
        </div>
    </div>
</section>

    <section>
        <div class="container py-5">
            <div class="row">

                <!-- Section filtres -->
                <div class="col-md-3">
                    <!--<div class="sticky-top">  Cette classe permet de garder les filtres visibles lors du défilement -->
                    <h4>Filtres produits</h4>
                    {{ form_start(form) }}
                    <div class="input-group mb-3">
                        {{ form_widget(form.SearchName, {'attr': {'class': 'form-control', 'placeholder': 'Rechercher...'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.SearchCategory) }}
                        <div class="filter-categories">
                            {% for child in form.SearchCategory %}
                                <div class="form-check">
                                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(child, null, {'attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

                <!-- Section produits -->
                <div class="col-md-9">
                    <div class="row">
                        {% for p in produits %}
                            <div class="col-md-4 mb-4">
                                <div class="card h-100" style="border-radius: 15px;">
                                    <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                                         data-mdb-ripple-color="light">
                                        <a href="/produitFront/{{ p.id }}" class="d-block bg-image hover-overlay ripple ripple-surface ripple-surface-light">
                                            <img src="/BackOffice/img/{{ p.imageProduit }}"
                                                 style="padding: 30px" class="img-fluid"
                                                 alt="{{ p.nom }}" />
                                        </a>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <!-- Fixed height for product name -->
                                        <div class="mb-2" style="min-height: 50px;">
                                            <h5><a href="{{ path('app_produit_details', { 'id': p.id }) }}" class="text-dark">{{ p.nom }}</a></h5>
                                        </div>
                                        <!-- Fixed height for product description -->
                                        <div class="mb-3" style="min-height: 30px;">
                                            <p class="small text-muted">Livraison à domicile</p>
                                        </div>
                                        <!-- Fixed height for product price -->
                                        <div class="mb-4" style="min-height: 30px;">
                                            <p class="text-dark">{{ p.prix | number_format(2, '.', '') }} DT</p>
                                        </div>

                                        <div class="d-flex justify-content-center align-items-center mt-auto">
                                            <a href="{{ path('add_cart', {id : p.id}) }}"><button type="submit" class="btn-card">Ajouter au panier</button></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <nav aria-label="Page navigation exemple">
                    <ul class="pagination">
                        {% if currentPage > 1 %}
                            <li class="page-item">
                                <a href="{{ path('app_produit_front', app.request.query.all|merge({'page': currentPage - 1})) }}" class="page-link">
                                    <span aria-hidden="true" >&laquo; Précédent</span>
                                </a>
                            </li>
                        {% endif %}
                        {% for i in 1..totalPages %}
                            <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                                <a href="{{ path('app_produit_front', app.request.query.all|merge({'page': i})) }}" class="page-link">
                                    {{ i }}
                                </a>
                            </li>
                        {% endfor %}

                        {% if currentPage < totalPages %}
                            <li class="page-item">
                                <a href="{{ path('app_produit_front', app.request.query.all|merge({'page': currentPage + 1})) }}" class="page-link">
                                    <span aria-hidden="true" >Suivant &raquo;</span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>


            </div>
        </div>
    </section>


{%endblock %}

{% block stylesheet %}
{{ parent() }}
<link href="{{ asset('FrontOffice/css/maboutique.css') }}" rel="stylesheet">
{% endblock %}