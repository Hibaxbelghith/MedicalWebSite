{% extends 'FrontOffice/base.html.twig' %}

{% block body %}

<!-- content -->
<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class="border rounded-4 mb-3 d-flex justify-content-center">
                    <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="/BackOffice/img/{{ produit.imageProduit }}">
                        <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="/BackOffice/img/{{ produit.imageProduit }}" />
                    </a>
                </div>
                <div class="d-flex justify-content-center mb-3">
                    {% for image in produit.imageProduit %}
                        <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{ asset(image) }}" class="item-thumb">
                            <img width="60" height="60" class="rounded-2" src="/BackOffice/img/{{ p.imageProduit }}" />
                        </a>
                    {% endfor %}
                </div>
                <!-- thumbs-wrap.// -->
                <!-- gallery-wrap .end// -->
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h4 class="title text-dark">
                        {{ produit.nom }} <br />
                        {{ produit.categorie }}
                    </h4>
                    <div class="d-flex flex-row my-3">
                        <div class="text-warning mb-1 me-2">
                            <!-- Affichez ici les étoiles si vous avez un système d'évaluation -->
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <span class="ms-1">
                evaluation
              </span>
                        </div>
                        <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>200 orders</span>
                        <span class="text-success ms-2">en stock</span>
                    </div>

                    <div class="mb-3">
                        <span class="h5">{{ produit.prix }} DT</span>
                        <span class="text-muted">/par unité</span>
                    </div>

                    <p>
                        {{ produit.description }}
                    </p>

                    <div class="row">

                        <dt class="col-3">Color</dt>
                        <dd class="col-9">bleu</dd>

                        <dt class="col-3">Brand</dt>
                        <dd class="col-9"> German</dd>
                    </div>

                    <hr />

                    <div class="row mb-4">

                        <!-- col.// -->
                        <div class="col-md-4 col-6 mb-3">
                            <label class="mb-2 d-block">Quantité</label>
                            <div class="input-group mb-3" style="width: 170px;">
                                <button class="btn btn-white border border-secondary px-3" type="button" id="button-addon1" data-mdb-ripple-color="dark">
                                    <i class="fa-solid fa-minus"></i>
                                </button>
                                <input type="text" class="form-control text-center border border-secondary" placeholder="14" aria-label="Example text with button addon" aria-describedby="button-addon1" />
                                <button class="btn btn-white border border-secondary px-3" type="button" id="button-addon2" data-mdb-ripple-color="dark">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn-card-buy"><i class="fa-solid fa-cart-shopping"></i> Acheter maintenant </button>
                    <a href="{{ path('add_cart', {id : produit.id}) }}"> <button type="button"  class="btn-card-panier"> <i class="fa-solid fa-basket-shopping"></i> Ajouter au panier </button> </a>
                </div>
            </main>
        </div>
    </div>
</section>
<!-- content -->

{% endblock %}


{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('FrontOffice/css/maboutique.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        header {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>

{% endblock %}