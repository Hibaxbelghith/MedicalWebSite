{% extends 'Backoffice/base.html.twig' %}

{% block title %}Commandes{% endblock %}


{% block body %}

    <h2 class="mt-4">Détails commande</h2>

    <div class="card mb-4">
        <table class="table">
            <tbody>
            <tr>
                <th>Utilisateur</th>
                <td>{{ commande.user.fullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ commande.user.email }}</td>
            </tr>
            <tr>
                <th>Transporteur</th>
                <td>{{ commande.NomCarrier }}</td>
            </tr>
            <tr>
                <th>Cout transport</th>
                <td>{{ commande.PrixCarrier }} DT</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ commande.delivery }}</td>
            </tr>
            <tr>
                <th>Passé le</th>
                <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Totale Commande</th>
                <td>{{ commande.totaleCommande }} DT</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commande.isPaid ? 'payé' : 'non payé' }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="mb-3" style="display: flex; gap: 10px;">
        <a class="btn btn-primary" href="{{ path('app_back_commande_index') }}">Retourner</a>

        <a type="submit" class="btn btn-success" href="{{ path('app_back_commande_edit', {'id': commande.id}) }}">Modifier</a>

        {{ include('back_commande/_delete_form.html.twig') }}</div>
{% endblock %}


