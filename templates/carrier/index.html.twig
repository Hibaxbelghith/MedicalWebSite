{% extends 'Backoffice/base.html.twig' %}

{% block title %}Carriers{% endblock %}

{% block body %}

    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for message in app.session.flashBag.get('success') %}
                {{ message }}
            {% endfor %}
        </div>
    {% endif %}

    <h2 class="mt-4">Les carriers</h2>
    <br>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fa-solid fa-list"></i>
            Liste carriers
            <a type="submit" class="btn" style="background-color: rgb(251,33,117); color: white; float: right;" href="{{ path('app_carrier_new') }}">Créer carrier</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for carrier in carriers %}
                    <tr>
                        <td>{{ carrier.id }}</td>
                        <td>{{ carrier.nom }}</td>
                        <td>{{ carrier.description }}</td>
                        <td>{{ carrier.prix }} DT</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="{{ path('app_carrier_edit', {'id': carrier.id}) }}">Modifier</a>
                            <a class="btn btn-danger btn-sm" href="{{ path('app_carrier_delete', {'id': carrier.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune résultat</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="{{ asset('BackOffice/js/scripts.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="{{ asset('BackOffice/demo/chart-area-demo.js') }}"></script>
    <script src="{{ asset('BackOffice/demo/chart-bar-demo.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="{{ asset('BackOffice/js/datatables-simple-demo.js') }}"></script>
{% endblock %}


